{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "id",
    "label",
    "path_prefix",
    "lead_image",
    "publishing_metadata",
    "contents",
    "tags"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "label": {
      "$ref": "#/definitions/label"
    },
    "path_prefix": {
      "type": "string"
    },
    "lead_image": {
      "type": "boolean"
    },
    "publishing_metadata": {
      "type": "object",
      "required": [
        "schema_name",
        "rendering_app"
      ],
      "additionalProperties": false,
      "properties": {
        "schema_name": {
          "type": "string"
        },
        "rendering_app": {
          "type": "string"
        }
      }
    },
    "contents": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/content_field"
      }
    },
    "tags": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/tag_field"
      }
    }
  },
  "definitions": {
    "id": {
      "type": "string",
      "pattern": "^[a-z_]+$"
    },
    "label": {
      "type": "string"
    },
    "content_field": {
      "type": "string",
      "enum": [
        "title_and_base_path",
        "summary",
        "body"
      ]
    },
    "tag_field": {
      "type": "object",
      "required": [
        "id",
        "type",
        "document_type"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "enum": [
            "primary_publishing_organisation",
            "organisations",
            "role_appointments",
            "topical_events",
            "world_locations"
          ]
        },
        "type": {
          "type": "string",
          "enum": [
            "single_tag",
            "multi_tag"
          ]
        },
        "document_type": {
          "type": "string",
          "enum": [
            "organisation",
            "role_appointment",
            "topical_event",
            "world_location"
          ]
        }
      }
    }
  }
}
