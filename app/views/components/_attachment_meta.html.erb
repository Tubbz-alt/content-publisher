<%
  presenter = GovukPublishingComponents::Presenters::Attachment.new(attachment)
  attributes = []

  if presenter.content_type_name
    content = if presenter.content_type_abbr
                raw tag.abbr(presenter.content_type.abbr,
                             title: presenter.content_type_name,
                             class: "app-c-attachment-meta__abbr")
              else
                presenter.content_type_name
              end
    attributes << tag.span(content, class: "app-c-attachment-meta__attribute")
  end

  if presenter.file_size
    attributes << tag.span(
      number_to_human_size(presenter.file_size),
      class: "app-c-attachment-meta__attribute",
    )
  end

  if presenter.number_of_pages
    attributes << tag.span(
      pluralize(presenter.number_of_pages, "page"),
      class: "app-c-attachment-meta__attribute",
    )
  end
%>
<%= tag.section class: "app-c-attachment-meta" do %>
  <% if presenter.reference.present? %>
    <%= tag.p "Ref: #{presenter.reference}", class: "app-c-attachment-meta__metadata govuk-!-margin-bottom-0" %>
  <% end %>

  <% if presenter.unnumbered_reference.present? %>
    <%= tag.p presenter.unnumbered_reference, class: "app-c-attachment-meta__metadata govuk-!-margin-bottom-0" %>
  <% end %>

  <% if attributes.any? %>
    <%= tag.p raw(attributes.join(', ')), class: "app-c-attachment-meta__metadata" %>
  <% end %>
<% end %>
