<% content_for :title, t("contacts.index.title") %>

<%
  contact_options = @contacts_by_organisation.flat_map do |org|
    org["contacts"].map do |contact|
      [contact['title'], contact["content_id"], {"data-hint": org['name']}]
    end
  end
%>

<%= form_tag(
  contacts_path(@edition.document),
  data: {
    modal_action: "insert",
    gtm: "insert-contact-embed"
  },
) do %>
  <%= render "components/autocomplete", {
    name: "contact_id",
    label: {
      text: t("contacts.index.label"),
      bold: true
    },
    hint: t("contacts.index.hint_text"),
    id: "contact-id",
    select: {
      options: [""] + contact_options,
    },
    type: "contacts",
    search: true,
  } %>

  <% if rendering_context == "modal" %>
    <%= render "govuk_publishing_components/components/button", {
      text: "Insert contact",
      data_attributes: {
        "modal-action": "insert",
        "autocomplete-contacts-snippet-template": I18n.t("contacts.index.contact_markdown", id: "#"),
        gtm: "insert-contact"
      },
      margin_bottom: true
    } %>
  <% else %>
    <%= render "govuk_publishing_components/components/button", {
      text: "Show markdown code",
      margin_bottom: true
    } %>

    <% if params[:contact_id] %>
      <%= render "components/metadata", {
        items: [
          {
            field: t("contacts.index.markdown_code"),
            value: t("contacts.index.contact_markdown", id: params[:contact_id])
          },
        ],
        inline: true,
        margin_bottom: 3,
      } %>
      <p class="govuk-body"><%= t("contacts.index.contact_instructions") %></p>

    <% end %>
  <% end %>

  <%= render_govspeak(t("contacts.index.contact_not_available_govspeak")) %>
<% end %>
