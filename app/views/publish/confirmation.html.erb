<% content_for :back_link, render_back_link(href: document_path(@document)) %>
<% content_for :title, t("publish_document.confirmation.title") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_tag publish_confirmation_path(@document), data: { gtm: "publish-document" } do %>
      <%= render "govuk_publishing_components/components/radio", {
        name: "self_declared_review_state",
        items: [
          {
            value: "has-been-reviewed",
            text: t("publish_document.confirmation.has_been_reviewed")
          },
          {
            value: "should-be-reviewed",
            text: t("publish_document.confirmation.should_be_reviewed")
          },
        ]
      } %>

      <%= render "govuk_publishing_components/components/button", {
        text: "Confirm publish",
        data_attributes: { gtm: "confirm-publish" },
      } %>
    <% end %>
  </div>
</div>
