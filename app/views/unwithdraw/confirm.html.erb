<% content_for :title, t("unwithdraw.confirm.title", title: @edition.title_or_fallback) %>
<% content_for :back_link, render_back_link(href: document_path(@edition.document)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <div class="govuk-body">
          <%= render_govspeak(t("unwithdraw.confirm.description_govspeak")) %>
        </div>
      </div>
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <%= form_tag(unwithdraw_path(@edition.document),
                     method: :post,
                     data: { gtm: "confirm-unwithdraw" }) do %>

          <%= render "govuk_publishing_components/components/button", {
            text: "Yes, undo withdrawal",
            destructive: true
          } %>

          <%= link_to "Cancel",
                      document_path(@edition.document),
                      class: "govuk-link govuk-link--no-visited-state app-link--inline",
                      data: { gtm: "cancel-unwithdraw" } %>

        <% end %>
      </div>
    </div>
  </div>
</div>
