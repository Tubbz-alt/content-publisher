<% confirmation = capture do %>
  <%= form_tag(
    document_path(@edition.document),
    method: :delete,
    data: { gtm: "delete-draft-submit" },
  ) do %>
    <%= render "govuk_publishing_components/components/button", {
      text: "Yes, delete draft",
      destructive: true
    } %>

  <%= link_to "Cancel",
              document_path(@edition.document),
              class: "govuk-link govuk-link--no-visited-state app-link--inline" %>
  <% end %>

<% end %>

<%= render "govuk_publishing_components/components/error_alert", {
  message: t("documents.show.flashes.delete_draft"),
  description: confirmation
} %>
