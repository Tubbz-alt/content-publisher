<% datetime = @edition.scheduled_publishing_datetime %>
<% time = datetime&.strftime("%l:%M%P") %>
<% date = datetime&.strftime("%-d %B %Y") %>

<% if @edition.scheduled? %>
  <%= render "govuk_publishing_components/components/notice", {
    description_govspeak: govspeak_to_html(
      t("documents.show.scheduling.notice.scheduled_govspeak",
        change_path: scheduling_path(@edition.document),
        time: time,
        date: date)
    ),
    margin_bottom: 4,
  } %>
<% end %>
<% if @edition.editable? %>
  <%= render "govuk_publishing_components/components/notice", {
    description_govspeak: govspeak_to_html(
      t("documents.show.scheduling.notice.proposed_govspeak",
        href: scheduling_path(@edition.document),
        time: time,
        date: date)
    ),
    margin_bottom: 4,
  } %>
<% end %>
