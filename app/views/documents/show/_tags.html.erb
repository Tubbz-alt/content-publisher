<% tags = @edition.document_type.tags.map { |field|
  {
    field: t_doctype_field(@edition, "#{field.id}.label"),
    value: render("documents/show/tags/#{field.id}_field", edition: @edition)
  }
} %>

<%= render "govuk_publishing_components/components/summary_list", {
  id: "tags",
  title: t("documents.show.tags.title"),
  borderless: true,
  edit: (
    if @edition.editable?
      { href: tags_path(@edition.document),
        data_attributes: { gtm: "edit-tags" } }
    end
  ),
  items: tags
} %>
